{
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.preferences.importModuleSpecifier": "non-relative",

	"editor.formatOnSave": false,
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[css]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[scss]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"files.exclude": {
		"**/.vscode": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/node_modules": true,
		"**/package-lock.json": true,
		"**/*.log.*": true,
		"**/*.min.*": true,
		"src/**/*.spec.ts": true,
		"src/test.ts": true,
		"src/polyfills.ts": true,
		"*.spec.*": true,
		"docs": true,
		"e2e": true,
		".svelte-kit": true
	},
	"search.exclude": {
		"**/*.svg": true,
		"docs": true,
		"e2e": true,
		".svelte-kit": true,
		"src/data": true
	},
	"cSpell.words": ["userid", "prerender"]
}
